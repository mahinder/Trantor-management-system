    </div>
    <div class="field row span12">
      <div class="span4">
        <%= f.label :father_name %><%= f.text_field :father_name ,:data => "" %>
      </div>

      <div class="span4">
        <%= f.label :spouse_name %><%= f.text_field :spouse_name ,:data => "" %>
      </div>
      <div class="span4">
        <%= f.label :salary %><%= f.text_field :salary ,:data => "" %>
      </div>
    </div>
    <div class="field row span12">
      <div class="span4">
        <%= f.label :email %><%= f.text_field :email ,:data => "" %>
      </div>

    </div>
    <div class="actions row">
      <div class="span2 offset6"><button type="submit"  >Create</button></div>
    </div>
  <% end %>
