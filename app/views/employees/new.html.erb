<a href="#upload" role="button" class="btn" data-toggle="modal">Upload CSV for Employee Creation</a>
<div id="upload" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Upload Csv</h3>
  </div>
  <div class="modal-body">
    <%= form_for :dump, :url=>{:controller=>"employees", :action=>"csv_import"}, :html => { :multipart => true } do |f| -%>
      <div class="field row span12">
        <div class="span4">
         <%= f.file_field :file -%>
        </div>
        <div class="span4">
        </div>
        <div class="span4">
          <%= submit_tag 'Submit' -%>
        </div>
        <%end%>
      </div>
   </div>
  </div>
  <%= form_for(:user , :url => '/employees') do |f| %>
    <div class="field row span12">
      <div class="span4">
        <%= f.label :ecode %><%= f.text_field :ecode ,:data => "" %>
      </div>

      <div class="span4">
        <%= f.label :date_of_joining %><%= f.text_field :date_of_joining ,:data => "" %>
      </div>

      <div class="span4">
        <%= f.label :band_id %><%= f.text_field :band_id ,:data => "" %>
      </div>
    </div>

    <div class="field row span12">

      <div class="span4">
        <%= f.label :gender %><%= f.text_field :gender ,:data => "" %>
      </div>

      <div class="span4">
        <%= f.label :location %><%= f.text_field :location ,:data => "" %>
      </div>

      <div class="span4">
        <%= f.label :manager_ecode %><%= f.text_field :manager_ecode   ,:data => "" %>
      </div>
    </div>
    <div class="field row span12">
      <div class="span4">
        <%= f.label :blood_group %><%= f.text_field :blood_group ,:data => "" %>
      </div>

      <div class="span4">
        <%= f.label :date_of_birth %><%= f.text_field :date_of_birth ,:data => "" %>
      </div>

      <div class="span4">
        <%= f.label :marital_status %><%= f.text_field :marital_status,:data => "" %>
      </div>
    </div>
    <div class="field row span12">
      <div class="span4">
        <%= f.label :date_of_anniversary %><%= f.text_field :date_of_anniversary ,:data => "" %>
      </div>

      <div class="span4">
