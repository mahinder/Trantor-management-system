<%= form_for(@band) do |f| %>
<div class="field row">
  <div class="span2 offset1">
      <%= f.label :name %>
  </div>
  <div class="span4">
      <%= f.text_field :name ,:data => "" %>
  </div>
  </div>
  <div class="actions row">
    <div class="span2 offset6"><button type="submit" class="band_create btn" >Create</button></div>
    <div class="span2"><button type="button" class="band_update btn" >Update</button></div>
    <div class="span2"><button type="button" class="band_reset btn" >Reset</button></div>
  </div>
<% end %>
